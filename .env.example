# Server
PORT=3200
NODE_ENV=development
FRONTEND_URL=http://localhost:5175
COOKIE_DOMAIN=localhost

# GraphDB
GRAPHDB_URL=https://graphdb.nicefox.net
GRAPHDB_PROJECT=auth
GRAPHDB_API_KEY=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3200/api/auth/google/callback

# JWT - Per-app secrets stored in filesystem
# For localhost, a hardcoded dev secret is used (zero-conf local development)
# For production, secrets are stored in JWT_SECRETS_DIR/<domain>
JWT_SECRETS_DIR=/var/lib/nicefox-auth/secrets
JWT_EXPIRES_IN=7d
